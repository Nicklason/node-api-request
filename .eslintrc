{
  "extends": ["eslint:recommended", "google"],
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "comma-dangle": [2, "never"],
    "indent": [2, 4, { "SwitchCase": 1 }],
    "keyword-spacing": 2,
    "linebreak-style": 0,
    "max-len": [2, 100, {
      "ignoreComments": true,
      "ignoreStrings": true
    }],
    "new-cap": [0],
    "no-console": [2],
    "object-curly-spacing": [2, "always"],
    "quote-props": ["error", "as-needed"],
    "require-jsdoc": [0],
    "space-before-function-paren": ["error", "always"]
  }
}